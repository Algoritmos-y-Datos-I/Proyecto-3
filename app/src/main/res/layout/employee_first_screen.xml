<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity"
        android:background="@color/grey">

    <!-- TextView para el título -->

    <!-- Botón para Registrarse -->

    <!-- Botón para Iniciar Sesión -->
    <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:backgroundTint="#010A4E"
            android:fontFamily="monospace"
            android:typeface="normal"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:text="Servicio de Carpooling"
            android:fontFamily="monospace" android:typeface="normal"
            android:textSize="21sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="170dp" android:textAlignment="center"/>
    <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Registrarse"
            android:backgroundTint="#010A4E"
            android:fontFamily="monospace"
            android:typeface="normal"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
            android:layout_marginTop="52dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
